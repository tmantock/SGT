<h4>New Student</h4>
<form>
    <div class="form-group">
        <label>First Name</label>
        {{input type="text" class="form-control" value=firstname placeholder="First Name"}}
    </div>
    <div class="form-group">
        <label>Last Name</label>
        {{input type="text" class="form-control" value=lastname placeholder="Last Name"}}
    </div>
    <div class="form-group">
        <label>Grade Level</label>
        <select class="form-control" onchange={{ action "setGrade" value="target.value"}}>
            {{#each gradeLevels as |grade|}}
                <option value={{grade}} selected={{if grade gradeLevel}}>{{grade}}</option>
            {{/each}}
        </select>
    </div>
    <button class="btn btn-primary" {{ action 'newStudent'}}>Submit</button>
</form>