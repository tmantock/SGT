<div class="row">
    <div class="col-md-8">
        <h1>Students</h1>
        <table class="table table-hover table-striped">
            <thead>
                <th>
                    Name
                </th>
                <th>
                    Points
                </th>
                <th>
                    Operations
                </th>
            </thead>
            <tbody>
                {{#each model as |assignment|}}
                    <tr>
                        <td>{{#link-to 'assignments.show' assignment.id}}{{assignment.name}}{{/link-to}}</td>
                        <td>{{assignment.points}}</td>
                        <td>
                            <button class="btn btn-danger" {{action 'deleteAssignment' assignment.id}}>Delete</button>
                        </td>
                    </tr>
                    {{else}}
                        <h4>No Assignments on Record</h4>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        {{render "assignments.new"}}
    </div>
</div>